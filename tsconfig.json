{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["es2018", "dom", "dom.iterable"],
        "jsx": "preserve",
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src"]
}
